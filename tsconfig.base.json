{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "commonjs",           // Changed from esnext
    "moduleResolution": "node",     // Changed from bundler
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "experimentalDecorators": true,     // Added
    "emitDecoratorMetadata": true,      // Added
    "useDefineForClassFields": false,   // Added - important for decorators
    "customConditions": ["development"]
  }
}